#!/bin/bash
# Alias


if [[ `uname` == 'Darwin' ]]; then
  alias ls='ls'
fi


if [[ `uname` == 'Linux' ]]; then
  alias ls='ls --color=auto'
fi

alias ll='ls -l'
alias la='ls -la'
alias grep='grep --color=auto'
alias vim='nvim'
alias find='fd'
alias grep='rg'
alias loc='tokei'
alias x='startx'
alias zx='zoxide'
